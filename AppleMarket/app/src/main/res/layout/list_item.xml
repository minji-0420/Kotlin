<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="6dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/main_iv_product"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/sample1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/main_tv_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하가나다라마바사아자차카타파하"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/cv"
            app:layout_constraintTop_toTopOf="@+id/cv" />

        <TextView
            android:id="@+id/main_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/darkgrey"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cv"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_name" />

        <TextView
            android:id="@+id/main_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cv"
            app:layout_constraintTop_toBottomOf="@+id/main_tv_address" />

        <TextView
            android:id="@+id/main_tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="25"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cv"
            app:layout_constraintEnd_toStartOf="@+id/main_iv_heart" />

        <ImageView
            android:id="@+id/main_iv_chatiing"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv"
            app:layout_constraintEnd_toStartOf="@+id/main_tv_review"
            app:srcCompat="@drawable/main_chatting" />

        <ImageView
            android:id="@+id/main_iv_heart"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv"
            app:layout_constraintEnd_toStartOf="@+id/main_tv_heart"
            app:srcCompat="@drawable/detail_heart_empty" />

        <TextView
            android:id="@+id/main_tv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="25"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cv"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>